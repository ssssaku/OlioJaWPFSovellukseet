<Window x:Class="Harjoitus21KT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ostoskärry" Height="350" Width="400">
    <Grid Background="Cyan">
        <StackPanel Margin="20">
            <TextBlock Text="Valitse tuotteet:" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <CheckBox x:Name="product1CheckBox" Content="Tuote 1" Checked="ProductCheckBox_Checked" Unchecked="ProductCheckBox_Unchecked" Margin="0,5"/>
            <CheckBox x:Name="product2CheckBox" Content="Tuote 2" Checked="ProductCheckBox_Checked" Unchecked="ProductCheckBox_Unchecked" Margin="0,5"/>
            <CheckBox x:Name="product3CheckBox" Content="Tuote 3" Checked="ProductCheckBox_Checked" Unchecked="ProductCheckBox_Unchecked" Margin="0,5"/>

            <TextBlock Text="Ostoskärry:" FontSize="20" FontWeight="Bold" Margin="0,20,0,10"/>
            <ItemsControl x:Name="cartItems" Margin="0,5" />

            <Button Content="Osta" Click="BuyButton_Click" Width="100" Height="30" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
